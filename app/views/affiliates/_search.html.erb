<% form_tag find_by_state_path, :method => "get", :id => "search_by_state" do %>
    <%= label_tag :state, "Search by state:" %>
   <%= select_tag(:state, options_from_collection_for_select(Affiliate.all(:select => 'distinct(state)', :order => 'state'), 'state', 'state'),  { :selected => params[:state], :include_blank => true, } ) %>
  <%= submit_tag "Search", :name => nil  %>
<% end -%>

<% form_tag find_by_name_path, :method => "get", :id => "search_by_name" do %>
    <%= label_tag(:name_abbr, "Search by name:") %>
  <%= text_field_with_auto_complete :affiliate, :name_abbr %>
  <%= submit_tag "Search", :name => nil  %>
<% end -%>
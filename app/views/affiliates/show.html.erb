<h1><%=h @affiliate.org_name %> (<%= @affiliate.name_abbr %>) <%= @affiliate.active? %> </h1>
<%= render :partial => @affiliate %>
<p><%= @affiliate.type %></p>
<p>
  <b>Url:</b>
  <%=h @affiliate.url %>
</p>

<p><%= @affiliate.address1 %><br />
  
  <%= @affiliate.city %>, <%= @affiliate.state %>  <%= @affiliate.zip %>
</p>
 <p><%= @affiliate.contact_name %> (<%= @affiliate.contact_email %>)</p>
  <ul>
  	<li>phone1:              <%= @affiliate.phone1 %>     </li>
  	<li>phone2:              <%= @affiliate.phone2 %>     </li>
  	<li>tty:                 <%= @affiliate.tty %>        </li>
  	<li>fax:                 <%= @affiliate.fax %>        </li>
  	<li>email:               <%= @affiliate.email %>      </li>
  	<li>description:         <%= @affiliate.description %></li>
  	<li>metric:              <%= @affiliate.metric %>     </li>
  	<li>public:              <%= @affiliate.public %>     </li>
  	<li>region:              <%= @affiliate.region %>     </li>
  	<li>province:            <%= @affiliate.province %>   </li>
  	<li>country:             <%= @affiliate.country %>    </li>
  	<li>template:            <%= @affiliate.template %>   </li>
		<li>state_ind:           <%= @affiliate.state_ind %></li>
  </ul> 
    
<div id="events">
<h2>Events (<%= @affiliate.events.count %>)</h2>
<%= render :partial => @affiliate.events %>
</div>
<% form_for [@affiliate, Event.new] do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.submit 'Add Event' %>
  </p>
<% end %>

<%= link_to 'Edit', edit_affiliate_path(@affiliate) %> |
<%= link_to 'Back', affiliates_path %>